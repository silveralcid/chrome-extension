{
    "manifest_version": 3,
    "name": "AI Search Extension",
    "version": "1.0",
    "permissions": [
      "contextMenus",
      "storage",
      "tabs",
      "commands",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "search-with-ai": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Search selected text with AI"
      }
    }
  }